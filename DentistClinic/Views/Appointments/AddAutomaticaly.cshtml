@using DentistClinic.ViewModels
@model AutomaticAppointmentViewModel
@{
    ViewData["Title"] = "AddAutomaticaly";
}
<h1 class="text-center text-info m-5">Add Automaticaly</h1>

<form method="post" class="w-50 m-auto">

    <label asp-for="Date"></label>
    <input type="date" asp-for="Date" class="form-control" />
    <span class="text-danger" asp-validation-for="Date"></span><br />

    <label asp-for="StartHour"></label>
    <input  asp-for="StartHour" class="form-control" />
    <span class="text-danger" asp-validation-for="StartHour"></span><br />

    <label asp-for="EndHour"></label>
    <input  asp-for="EndHour" class="form-control" />
    <span class="text-danger" asp-validation-for="EndHour"></span><br />

    <label asp-for="SessionDurationByMinutes">Duration By Minutes</label>
    <input asp-for="SessionDurationByMinutes" class="form-control" />
    <span class="text-danger" asp-validation-for="SessionDurationByMinutes"></span><br />

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <input type="submit" class="btn btn-info m-auto" />

</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial"></partial>
}

